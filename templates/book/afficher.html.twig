{% extends 'base.html.twig' %}

{% block title %}All Books{% endblock %}

{% block body %}
<h1>All Books</h1>


    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Publication Date</th>
                <th>Published</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            {% for b in books %}
                <tr>
                    <td>{{ b.title }}</td>
                    <td>{{ b.category }}</td>
                    <td>{{ b.publicationDate|date('d/m/Y') }}</td>
                    <td>{{ b.published ? 'Yes' : 'No' }}</td>
                    <td>{{ b.author.username }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}